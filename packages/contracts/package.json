{
  "name": "@credbull/contracts",
  "private": true,
  "main": "index.js",
  "types": "index.ts",
  "scripts": {
    "chain": "ts-node script/utils/truncateTables.ts && anvil --config-out localhost.json",
    "clean": "forge clean && rm -rf broadcast cache deployments types 'script/output/*.json' localhost.json index.js",
    "build": "forge build && yarn gen-types && tsc",
    "test": "forge test",
    "format": "forge fmt && prettier './script/**/*.js' --write",
    "lint": "forge fmt && eslint --fix --ignore-path .gitignore && yarn solhint './*(test|src)/**/*.sol'",
    "deploy": "make deploy-local",
    "deploy:ci": "make deploy-baseSepolia",
    "gen-types": "yarn typechain --target ethers-v5 --out-dir ./types ./out/*.sol/*.json",
    "postinstall": "yarn build"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "@typechain/ethers-v5": "^11.1.2",
    "@types/eslint": "^8",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.2",
    "solhint": "^5.0.3",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "js-toml": "^1.0.0"
  }
}
