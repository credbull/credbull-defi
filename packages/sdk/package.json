{
  "name": "@credbull/sdk",
  "packageManager": "yarn@3.2.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "tsc --build --clean && rm -rf playwright-report test-results",
    "dev": "tsc --build --watch",
    "build": "tsc --build",
    "build:ci": "yarn build",
    "int-test": "playwright test",
    "format": "prettier . --write",
    "int-test-staking": "playwright test test/src/staking/deposit-app.spec.ts -g \"Test Deposit 3\"",
    "start-staking": "ts-node test/src/staking/vault-deposit-app.ts TEST-vault-deposit-3.json",
    "lint": "eslint --fix --ignore-path .gitignore",
    "report": "playwright show-report"
  },
  "dependencies": {
    "@credbull/api": "workspace:^",
    "@credbull/contracts": "workspace:^",
    "dotenv": "^16.4.5",
    "ethers": "5.7.2",
    "siwe": "^2.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "js-toml": "^1.0.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
