{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "types/**", "out/**"]
    },
    "build:ci": {
      "dependsOn": ["^build:ci"]
    },
    "app#build:ci": {
      "dependsOn": ["^build:ci"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "api#build:ci": {
      "dependsOn": ["^build:ci"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "int-test": {
      "dependsOn": ["^int-test"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
