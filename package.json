{
  "name": "@credbull/repo",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "spikes/*"
    ]
  },
  "scripts": {
    "account": "yarn workspace @credbull/foundry account",
    "chain": "yarn workspace @credbull/foundry chain",
    "compile": "yarn workspace @credbull/foundry compile",
    "deploy": "yarn workspace @credbull/foundry deploy",
    "deploy:verify": "yarn workspace @credbull/foundry deploy:verify",
    "fork": "yarn workspace @credbull/foundry fork",
    "generate": "yarn workspace @credbull/foundry generate",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "turbo format",
    "dev": "turbo dev",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "~8.0.3",
    "lint-staged": "^15.2.0",
    "turbo": "^1.11.2"
  },
  "packageManager": "yarn@3.2.3"
}
